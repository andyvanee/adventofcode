#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.join(File.dirname(__FILE__), '..', 'lib'))
require 'matchsticks'

# Part 1
# ========================================

input_lines = ARGF.read.split(/\n/).reject(&:empty?)

total = 0
input_lines.each { |n| total += Matchsticks.count(n) }
puts "#{total} characters"
